<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostrajActivity"
    android:orientation="horizontal"
    android:background="#FFFF00">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_svlayout_id">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sv_scrollview_id">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_contentlayout_id">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_name_id"
                    android:text="Name"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_country_id"
                    android:text="Enter your countyr"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_below="@id/tv_name_id"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_enteryourcountry_id"
                    android:hint="Enter your country"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/tv_country_id"
                    android:background="@drawable/enter_your_counrty_border"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"/>



                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_enteryourname_id"
                    android:hint="Enter your name"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="100dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/entername_your_border"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"/>




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_phonenumber_id"
                            android:text="Enter your phone Number"
                            android:textSize="20dp"
                            android:layout_below="@id/et_enteryourcountry_id"
                           android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:textColor="#000000"/>




                <EditText
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_enterphonenumber_id"
                    android:hint="Enter phone number"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tv_phonenumber_id"
                   android:layout_marginLeft="20dp"
                    android:inputType="number"
                    android:background="@drawable/enter_phonenumber_border"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_jobdescription_id"
                    android:textSize="20dp"
                    android:text="The type of job to be done"
                    android:textColor="#000000"
                    android:layout_below="@id/et_enterphonenumber_id"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_jobdescription_id"
                    android:hint="Description here"
                    android:layout_below="@id/tv_jobdescription_id"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/jobdescription_border"
                    android:paddingBottom="100dp"
                    android:paddingLeft="15dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_describethetermsofemployment"
                    android:textSize="20dp"
                    android:text="The Duration of Employment"
                    android:textColor="#000000"
                    android:layout_below="@id/et_jobdescription_id"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>


                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_theemploymentduration_id"
                    android:hint="Discribe here"
                    android:layout_below="@id/tv_describethetermsofemployment"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/employmentduration_border"
                    android:paddingBottom="100dp"
                    android:paddingLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_skillsandrequrements_id"
                    android:text="Requirements/skills needed"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_below="@id/et_theemploymentduration_id"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_describerequirements_id"
                    android:hint="Describe here"
                    android:layout_below="@id/tv_skillsandrequrements_id"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/requirements_border"
                    android:paddingBottom="100dp"
                    android:paddingLeft="15dp"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_Submit_id"
                    android:text="submit"
                    android:textStyle="bold"
                    android:layout_below="@id/et_describerequirements_id"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#ffffff"
                    android:background="#8A4B08"/>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_home_id"
                    android:text="home"
                    android:layout_below="@id/et_describerequirements_id"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#ffffff"
                    android:background="#8A4B08"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_space_id"
                    android:layout_below="@id/bt_Submit_id"
                    android:layout_marginTop="50dp"/>







            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>